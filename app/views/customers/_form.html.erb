<%= form_for(@customer) do |f| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% @customer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-lg-8 col-lg-offset-2"> 
  <div class="jumbotron">
    <h2>How many employees in your company?</h2>


    <div class="checkbox">
      <%= check_box(:customer, :employees,{},"<10","not checked") %>
      <h3><%= label_tag("Less than 10") %></h3>
   
    </div>

    <div class="checkbox">
      <%= check_box(:customer, :employees2,{},"10-30","not checked") %>
      <h3><%= label_tag("10-30") %></h3>
   
    </div>

    <div class="checkbox">
      <%= check_box(:customer, :employees3,{},"30+","not checked") %>
      <h3><%= label_tag("30+") %></h3>
   
    </div>


    <div class="form-group">
      <%= f.label :function %><br>
      <%= f.text_field :function, class: "form-control", placeholder: "Industry" %>
    </div>
   

  </div>

</div>



<div class="col-lg-8 col-lg-offset-2">
  <div class="jumbotron">
    

    <div class="form-group">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control", placeholder: "name" %>
      
    </div>

    <div class="form-group">
        <%= f.label :cell %><br>
        <%= f.text_field :cell, class: "form-control", placeholder: "Cel" %>
      
    </div>


    <div class="form-group">
        <%= f.label :email %><br>
        <%= f.text_field :email, class: "form-control", placeholder: "email" %>
    </div>

    <div class="form-group">
      <%= f.submit "Get Free quotes", class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</div>






<% end %>

